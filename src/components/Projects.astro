---
import React from "../icons/React.astro"
import Tailwind from "../icons/Tailwind.astro"
import Github from "../icons/Github.astro"
import LinkButton from "../components/LinkButton.astro"
import Link from "../icons/Link.astro"
import Vue from "../icons/Vue.astro"
import Css from "../icons/Css.astro"
import Bootstrap from "../icons/Bootstrap.astro"
import Django from "../icons/Django.astro"
import C from "../icons/C.astro"

const TAGS = {
  C: {
    name: 'C Language',
    class: 'bg-[#283593] text-white',
    icon: C,
  },

  REACT: {
    name: 'React',
    class: 'bg-[#3d9eb8] text-white',
    icon: React,
  },

  TAILWIND: {
    name: 'Tailwind CSS',
    class: 'bg-[#003159] text-white',
    icon: Tailwind,
  },
  VUE: {
    name: 'Vue.js',
    class: 'bg-[#42b883] text-white',
    icon: Vue,
  },
  CSS: {
    name: 'CSS',
    class: 'bg-[#264de4]',
    icon: Css,
  },
  BOOTSTRAP: {
    name: 'Bootstrap',
    class: 'bg-[#5b23fb]',
    icon: Bootstrap,
  },
    DJANGO: {
    name: 'Django',
    class: 'bg-[#092e20]',
    icon: Django,
  }
}

const PROJECTS = [
  {
    title: 'Prototipo Robot Bípedo',
    description: 'Diseño y montaje de un robot bípedo. Programación de la lógica de movimiento y control de servos, integrando software con hardware mecánico impreso en 3D. (Imagen son propiedad de "makerforgetech". Pendiende de subir imagen propia.)',
    image: '/projects/robot_bipedo.png',
    tags: []
  },
  {
    title: 'QR Code Generator (Engine en C)',
    description: 'Motor de generación de códigos QR programado desde cero en C, con gestión manual de memoria y matrices.',
    image: '/projects/qr_generator.png',
    tags: [TAGS.C]
  },
  {
    title: 'Viajecitos',
    description: 'Viajecitos es un sitio web donde simula un ecommerce de viajes y turismo real. Donde se puede realizar reservas de viajes, alojamiento en hoteles o compras de paquetes de guias de turismo.',
    link: 'https://viajecitos-react.vercel.app/home',
    github: 'https://github.com/nahuelcerrano/viajecitos-react',
    image: '/projects/viajecitos_project.jpg',
    tags: [TAGS.REACT, TAGS.TAILWIND]
  },

  {
    title: 'Ferreteria Maxi',
    description: 'Ferreteria Maxi es un sitio web mayorista de ferreteria donde gestiona los pedidos de los preventistas.',
    github: 'https://github.com/nahuelcerrano/grupo2-django',
    image: '/projects/ferreteria_maxi_project.jpg',
    tags: [TAGS.DJANGO, TAGS.BOOTSTRAP]
  },

  {
    title: 'Pokemon App',
    description: 'Un simple juego hecho con Vue en donde tiene que adivinar que pokemon es.',
    link: 'https://vue-pokemon-app-api.netlify.app/',
    github: 'https://github.com/nahuelcerrano/grupo2-django',
    image: '/projects/pokemon_app_project.jpg',
    tags: [TAGS.VUE, TAGS.CSS]
  },

  {
    title: 'Buscador de películas',
    description: 'Es una simple aplicacíon donde llamo a una API de películas a traves de un input.',
    link: 'https://buscador-de-pelis.vercel.app/',
    github: 'https://github.com/nahuelcerrano/buscador-peliculas',
    image: '/projects/buscador-peliculas.jpg',
    tags: [TAGS.REACT, TAGS.CSS]
  },

  {
    title: 'Heroes SPA',
    description: 'Un sitio web donde muestra los hereos de Marvel como de DC, este pequeño proyecto lo hice como ejercicios para aprender React Router.',
    link: 'https://heroes-spa-project.vercel.app/marvel',
    github: 'https://github.com/nahuelcerrano/heroes-spa',
    image: '/projects/heroes_spa_project.jpg',
    tags: [TAGS.REACT, TAGS.BOOTSTRAP]
  }
]

---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <Github class="size-6" />
              Code             
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>